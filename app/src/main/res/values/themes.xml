<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FindShareParking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="myThemeFirstActivity" parent="Theme.FindShareParking">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="myTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">70sp</item>
        <item name="boxStrokeColor">@color/text_input_box_color_v1</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="android:saveEnabled">false</item>
        <item name="errorIconDrawable">@drawable/error_outline</item>

    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>
        <item name="colorAccent">@color/orange</item>
    </style>


    <style name="MyButtonFill" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="MyButtonTransparent" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/orange</item>
        <item name="strokeColor">@color/orange</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/orange</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.MaterialComponents.Headline5" />


    <style name="CustomToolbarPrimary" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/orange</item>
        <item name="colorSecondary">@color/orange</item>
        <!--Changes the color of text-->
        <item name="theme">@style/searchViewTheme</item>

    </style>


    <style name="searchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:editTextColor">@color/orange</item>
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@null</item>
        <item name="searchViewStyle">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/search</item>

    </style>

    <style name="CustomToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/orange</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>


    </style>


    <style name="btnColorPrimary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="colorPr">
        <item name="colorPrimary">@color/orange</item>
    </style>


    <style name="myNavigationStyle" parent="Base.Theme.AppCompat">
        <item name="itemTextColor">@color/gray</item>
        <item name="itemIconSize">30dp</item>
        <item name="itemIconTint">@color/orange</item>
        <item name="itemTextAppearance">@style/navigationTextStyle</item>
    </style>


    <style name="navigationTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
    </style>


    <style name="myColorPrimary" parent="Theme.FindShareParking">
        <item name="android:textSize">17sp</item>
    </style>


</resources>